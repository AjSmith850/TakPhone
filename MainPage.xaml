<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="TakPhone"
             x:Class="TakPhone.MainPage">

    <VerticalStackLayout
        Spacing="5">

        <Image
                Source="mapex.png"
                HeightRequest="675"
                Aspect="AspectFill"
                HorizontalOptions="Center" />

        <HorizontalStackLayout
            Spacing="5">

            <Button
                    x:Name="CounterBtn"
                    Text="Compass"/>
            <Button
                    x:Name="Button2"
                    Text="Coordinates"/>
            <Button
                    x:Name="Button3"
                    Text="Topographical"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>
